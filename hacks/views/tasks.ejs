<%- include('header'); %>

 <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">


          <h2>Tasks</h2>
          <table id="tasks" class="table table-bordered">
          <thead>
          <tr>
          <th></th>
          <th>Task ID</th>          
          <th>Name</th>
          <th>Trigger</th>
          </tr>
          </thead>
          <tbody>

            <% for(var i=0; i<tasks.length; i++) {%>
            <tr>
              <td><span><a href="tasks/by-id/<%= tasks[i]._id %>"><i class="fa fa-edit"></i></a><a role="button" class="deleteTask" data-button='{"id": "<%= tasks[i]._id %>"}'> <i class="fa fa-trash"></i></a></span></td>
                <td><span><%= tasks[i]._id %></span>
                <td><span><%= tasks[i].name %></span>              
                <td><span><%= tasks[i].trigger %></span>
                
              </tr>
              <% } %>
              </tbody>
          </table>

          <h4>Add Task</h4>
          <div class="addTask">
          <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4">

           <form action="/tasks" method="POST">
           <div class="form-group">
            <label for="name">Name</label>
            <input type="text" placeholder="Name" class="form-control" name="name">
          </div>

          <div class="form-group">
            <label for="name">Trigger</label>
            <input type="text" placeholder="Trigger" class="form-control" name="trigger">
          </div>

          <button type="submit" class="btn btn-default">Submit</button>

          </form>
          </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    

  <%- include('footer'); %>